<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
    <h2 class="text-center mb-4">Criar Conta</h2>

    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Nome Completo", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", autofocus: true, required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :user_type, "Tipo de Conta", class: "form-label" %>
        <%= f.select :user_type, User.user_types.keys.map { |w| [w.titleize, w] }, { prompt: "Selecione" }, class: "form-select", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Senha", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirme sua Senha", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Criar Conta", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      JÃ¡ tem uma conta? <%= link_to "Entrar", new_session_path(resource_name), class: "text-decoration-none" %>
    </div>
  </div>
</div>
